    </div>
    <div class="col-md-4">
        {{>local_uitest/cssoutput}}
    </div>
</div>
{{#js}}
require(
[
    'jquery',
    'core/pubsub',
    'local_uitest/processing'
],
function(
    $,
    PubSub,
    Processing
) {

    Processing.init('.tool-wp-table-tree');
    var loaderBtn = $('[data-action="showloader"]');
    var hideBtn = $('[data-action="hideloader"]');

    loaderBtn.on('click', function() {
        PubSub.publish('wp-loader-loading');
    });

    hideBtn.on('click', function() {
        PubSub.publish('wp-loader-stoploading');
    });

});
{{/js}}